<Page
	x:Class="OxygenVK.AppSource.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="using:Windows.UI.Xaml.Controls"
	xmlns:controls="using:Microsoft.UI.Xaml.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:my="using:OxygenVK.AppSource.Authorization.Controls"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	mc:Ignorable="d">
	<Page.Resources>
		<ResourceDictionary Source="/AppSource/Dictionaries/ApplicationThemeDictionary.xaml" />
	</Page.Resources>
	<Grid>
		<c:Grid.OpacityTransition>
			<ScalarTransition Duration="0:0:0.3" />
		</c:Grid.OpacityTransition>
		<Grid.Background>
			<AcrylicBrush TintColor="#66000000" />
		</Grid.Background>
		<controls:NavigationView
			x:Name="Navigation"
			AlwaysShowHeader="True"
			Background="{ThemeResource RegionBrush}"
			DisplayModeChanged="Navigation_DisplayModeChanged"
			IsBackButtonVisible="Visible"
			IsBackEnabled="True"
			IsSettingsVisible="True"
			IsTabStop="False"
			IsTitleBarAutoPaddingEnabled="False"
			Loaded="Navigation_Loaded"
			PaneClosing="Navigation_PaneClosing"
			PaneDisplayMode="Auto"
			PaneOpening="Navigation_PaneOpening"
			SelectionChanged="Navigation_SelectionChanged"
			SelectionFollowsFocus="Enabled">
			<controls:NavigationView.PaneHeader>
				<controls:SplitButton
					x:Name="accauntsSplitButton"
					Margin="5,0,10,0"
					Padding="0,0,0,0"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					CornerRadius="{ThemeResource ControlCornerRadius}">
					<controls:SplitButton.OpacityTransition>
						<ScalarTransition Duration="0:0:0.5" />
					</controls:SplitButton.OpacityTransition>
					<controls:SplitButton.Content>
						<Grid
							x:Name="accauntsSplitButtonContent"
							Width="234"
							Height="38">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="38" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<PersonPicture
								x:Name="personPicture"
								Grid.Column="0"
								Height="38" />
							<ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
								<TextBlock
									x:Name="firstANDlastName"
									HorizontalAlignment="Center"
									VerticalAlignment="Center"
									FontSize="14"
									HorizontalTextAlignment="Center"
									Text="Rashid Ибн Муталиб Аль Рамазан (aрабская версия)"
									TextAlignment="Center"
									TextWrapping="WrapWholeWords" />
							</ScrollViewer>
						</Grid>
					</controls:SplitButton.Content>
					<controls:SplitButton.Flyout>
						<Flyout Placement="Auto">
							<StackPanel Margin="0">
								<ListView x:Name="accauntsSplitButtonList" SelectionMode="None">
									<ListView.ItemTemplate>
										<DataTemplate>
											<my:HorizontalUserCard Margin="-12,0,-12,10" ClickDelete="HorizontalUserCard_ClickDelete" />
										</DataTemplate>
									</ListView.ItemTemplate>
								</ListView>
								<StackPanel Orientation="Horizontal">
									<Button/>
									<Button/>
								</StackPanel>
							</StackPanel>
						</Flyout>
					</controls:SplitButton.Flyout>
				</controls:SplitButton>
			</controls:NavigationView.PaneHeader>

			<controls:NavigationView.MenuItems>
				<controls:NavigationViewItem
					x:Name="ItemNews"
					Content="Новости"
					IsSelected="True"
					Tag="news">
					<controls:NavigationViewItem.Icon>
						<SymbolIcon Symbol="PreviewLink" />
					</controls:NavigationViewItem.Icon>
				</controls:NavigationViewItem>
				<controls:NavigationViewItem
					x:Name="test"
					Content="test"
					Tag="test">
					<controls:NavigationViewItem.Icon>
						<SymbolIcon Symbol="PreviewLink" />
					</controls:NavigationViewItem.Icon>
				</controls:NavigationViewItem>
			</controls:NavigationView.MenuItems>

			<Grid x:Name="NavigationGrid">
				<Frame
					x:Name="contentFrame"
					Margin="0,90,0,0"
					Background="{ThemeResource RegionBrush}"
					SizeChanged="contentFrame_SizeChanged">
					<Frame.ContentTransitions>
						<TransitionCollection>
							<NavigationThemeTransition />
						</TransitionCollection>
					</Frame.ContentTransitions>
				</Frame>
				<TextBlock
					x:Name="headerText"
					Margin="24,40,0,16"
					VerticalAlignment="Top"
					FontSize="24"
					Style="{StaticResource HeaderTextBlockStyle}"
					Text="Main" />
			</Grid>
		</controls:NavigationView>
		<Grid
			x:Name="AppTitleBar"
			Height="40"
			Margin="320,0,0,0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Top"
			Background="Transparent">
			<Grid.ColumnDefinitions>
				<ColumnDefinition x:Name="LeftPaddingColumn" Width="0" />
				<ColumnDefinition />
				<ColumnDefinition x:Name="RightPaddingColumn" Width="0" />
			</Grid.ColumnDefinitions>

			<TextBlock
				x:Name="AppNameTextBlock"
				Grid.Column="1"
				Margin="5,0,0,0"
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				Style="{StaticResource CaptionTextBlockStyle}"
				Text="OxygenVK">
				<TextBlock.TranslationTransition>
					<Vector3Transition />
				</TextBlock.TranslationTransition>
				<TextBlock.OpacityTransition>
					<ScalarTransition Duration="0:0:0.5" />
				</TextBlock.OpacityTransition>
			</TextBlock>
		</Grid>
	</Grid>
</Page>
