<Page
	x:Class="OxygenVK.AppSource.Views.User.UserPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:local="using:OxygenVK.AppSource.Views.Controls"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	mc:Ignorable="d">
	<Page.Resources>
		<ResourceDictionary Source="/AppSource/Dictionaries/ApplicationThemeDictionary.xaml" />
	</Page.Resources>
	<Grid Background="{ThemeResource RegionBrush}">
		<ListView x:Name="_lv">
			<ListView.ItemTemplate>
				<DataTemplate>
					<local:ItemPostControl MaxWidth="800"/>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</Grid>
</Page>
