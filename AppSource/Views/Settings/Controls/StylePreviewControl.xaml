<UserControl
    x:Class="OxygenVK.AppSource.Views.Settings.Controls.StylePreviewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OxygenVK.AppSource.Views.Settings.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
	<UserControl.Resources>
		<ResourceDictionary Source="/AppSource/Dictionaries/ApplicationThemeDictionary.xaml"/>
	</UserControl.Resources>
	<StackPanel Orientation="Vertical" Background="{ThemeResource RegionBrush}" Margin="24,0,0,0">
		<Border Height="40" Margin="0,0,0,20">
			<TextBlock
                VerticalAlignment="Center"
                FontWeight="SemiBold"
                LineHeight="20"
                Style="{StaticResource SubtitleTextBlockStyle}" 
				Text="{x:Bind Title}"/>
		</Border>
		<TextBlock
            x:Uid="TestContentButtonsBlock"
            Margin="0,0,0,16"
            Style="{StaticResource BaseTextBlockStyle}" />
		<Button x:Uid="TestContentEnabledButton" Margin="0,0,0,12" CornerRadius="{ThemeResource ControlCornerRadius}"/>
		<Button
            x:Uid="TestContentDisabledButton"
            Margin="0,0,0,12"
            IsEnabled="False"/>
		<ToggleButton x:Uid="TestContentToggleButton" Margin="0,0,0,12" />
		<ToggleButton
            x:Uid="TestContentToggledButton"
            Margin="0,0,0,12"
            IsChecked="True" />
		<Button
            x:Uid="TestContentEnabledAccentButton"
            Margin="0,0,0,12"
            Style="{StaticResource AccentButtonStyle}" />
		<Button
            x:Uid="TestContentDisabledAccentButton"
            Margin="0,0,0,28"
            IsEnabled="False"
            Style="{StaticResource AccentButtonStyle}" />
		<TextBlock
            x:Uid="TestContentCheckboxBlock"
            Margin="0,0,0,16"
            Style="{StaticResource BaseTextBlockStyle}" />
		<CheckBox x:Uid="TestContentUncheckedCheckbox" Margin="0,0,0,12" />
		<CheckBox
            x:Uid="TestContentCheckedCheckbox"
            Margin="0,0,0,12"
            IsChecked="True" />
		<CheckBox
            x:Uid="TestContentThirdStateCheckbox"
            Margin="0,0,0,12"
            IsChecked="{x:Null}" />
		<CheckBox
            x:Uid="TestContentDisabledCheckbox"
            Margin="0,0,0,28"
            IsChecked="True"
            IsEnabled="False" />
		<TextBlock
            x:Uid="TestContentRadioBlock"
            Margin="0,0,0,16"
            Style="{StaticResource BaseTextBlockStyle}" />
		<RadioButton
            x:Uid="TestContentUncheckedRadio"
            Margin="0,0,0,12"
            GroupName="Test1" />
		<RadioButton
            x:Uid="TestContentCheckedRadio"
            Margin="0,0,0,12"
            GroupName="Test1"
            IsChecked="True" />
		<RadioButton
            x:Uid="TestContentDisabledRadio"
            Margin="0,0,0,28"
            GroupName="Test2"
            IsChecked="True"
            IsEnabled="False" />
		<TextBlock
            x:Uid="TestContentComboBlock"
            Margin="0,0,0,16"
            Style="{StaticResource BaseTextBlockStyle}" />
		<ComboBox Width="200" Margin="0,0,0,12">
			<ComboBox.Items>
				<ComboBoxItem x:Uid="TestContentComboItem1" IsSelected="True" />
				<ComboBoxItem x:Uid="TestContentComboItem2" />
				<ComboBoxItem x:Uid="TestContentComboItem3" />
			</ComboBox.Items>
		</ComboBox>
		<ComboBox
            Width="200"
            Margin="0,0,0,28"
            IsEditable="True">
			<ComboBox.Items>
				<ComboBoxItem x:Uid="TestContentEditableComboItem1" IsSelected="True" />
				<ComboBoxItem x:Uid="TestContentEditableComboItem2" />
				<ComboBoxItem x:Uid="TestContentEditableComboItem3" />
			</ComboBox.Items>
		</ComboBox>
		<TextBlock
            x:Uid="TestContentTextboxBlock"
            Margin="0,0,0,16"
            Style="{StaticResource BaseTextBlockStyle}" />
		<TextBox
            x:Uid="TestContentTextbox"
            Width="200"
            Margin="0,0,0,28"
            HorizontalAlignment="Left" />
		<TextBlock
            x:Uid="TestContentToggleBlock"
            Margin="0,0,0,16"
            Style="{StaticResource BaseTextBlockStyle}" />
		<ToggleSwitch Margin="0,0,0,12" IsOn="False" />
		<ToggleSwitch Margin="0,0,0,28" IsOn="True" />
		<TextBlock
            x:Uid="TestContentSliderBlock"
            Margin="0,0,0,16"
            Style="{StaticResource BaseTextBlockStyle}"
            Text="Slider" />
		<Slider
            Margin="0,0,0,28"
            HorizontalAlignment="Stretch"
            Maximum="100"
            Minimum="0"
            Value="50" />
		<TextBlock
            x:Uid="TestContentListviewBlock"
            Margin="0,0,0,16"
            Style="{StaticResource BaseTextBlockStyle}" />
		<ListView Margin="0,0,0,28" HorizontalAlignment="Stretch">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding}" />
				</DataTemplate>
			</ListView.ItemTemplate>
			<ListView.Items>
				<ListViewItem x:Uid="TestContentListviewItem1" IsEnabled="False" />
				<ListViewItem x:Uid="TestContentListviewItem2" IsSelected="True" />
				<ListViewItem x:Uid="TestContentListviewItem3" />
				<ListViewItem x:Uid="TestContentListviewItem4" />
			</ListView.Items>
		</ListView>
		<TextBlock
            x:Uid="TestContentCommandBarBlock"
            Margin="0,0,0,16"
            Style="{StaticResource BaseTextBlockStyle}" />
		<CommandBar Margin="0,0,0,28" HorizontalAlignment="Stretch">
			<AppBarButton x:Uid="TestContentAppBarButton" />
		</CommandBar>
		<TextBlock
            x:Uid="TestContentDatePickerBlock"
            Margin="0,0,0,16"
            Style="{StaticResource BaseTextBlockStyle}" />
		<DatePicker Margin="0,0,0,28" HorizontalAlignment="Stretch" />
		<TextBlock
            x:Uid="TestContentTimePickerBlock"
            Margin="0,0,0,16"
            Style="{StaticResource BaseTextBlockStyle}" />
		<TimePicker Margin="0,0,0,0" HorizontalAlignment="Stretch" />
		<TextBlock
            x:Uid="TestContentCalendarViewBlock"
            Margin="0,0,0,16"
            Style="{StaticResource BaseTextBlockStyle}" />
		<Grid HorizontalAlignment="Stretch" Height="120" Background="{ThemeResource SystemControlAcrylicWindowBrush}" Margin="0, 0, 0, 16" />
		<TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Text="Base Acrylic" FontStyle="Italic" Margin="5"/>

		<Grid HorizontalAlignment="Stretch" Height="120" Background="{ThemeResource SystemControlAccentAcrylicWindowAccentMediumHighBrush}" Margin="0, 0, 0, 16" CornerRadius="{ThemeResource ControlCornerRadius}">
			<TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Text="Primary Acrylic" FontStyle="Italic" Margin="5" RequestedTheme="Dark"/>
		</Grid>
		<CalendarView Margin="0,0,0,28" HorizontalAlignment="Stretch"/>

	</StackPanel>
</UserControl>
