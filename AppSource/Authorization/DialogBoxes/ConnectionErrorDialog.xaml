<ContentDialog
	x:Class="OxygenVK.AppSource.Authorization.DialogBoxes.AuthFailedDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Ошибка подключения..."
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	CornerRadius="10"
	DefaultButton="Primary"
	PrimaryButtonText="Повторить">
	<ContentDialog.Resources>
		<ResourceDictionary Source="/AppSource/Dictionaries/ApplicationThemeDictionary.xaml" />
	</ContentDialog.Resources>

	<StackPanel>
		<Grid Margin="0,0,0,10">
			<FontIcon
				FontFamily="Segoe MDL2 Assets"
				FontSize="200"
				Foreground="{StaticResource SystemAccentColor}"
				Glyph="&#xE128;" />
			<FontIcon
				Margin="0,-36,85,0"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				FontFamily="Segoe MDL2 Assets"
				FontSize="100"
				Foreground="Red"
				Glyph="&#xE871;" />
		</Grid>
		<TextBlock FontSize="15" TextWrapping="Wrap">
			Проверьте подключение к сети и повторите попытку!
		</TextBlock>
	</StackPanel>

</ContentDialog>
