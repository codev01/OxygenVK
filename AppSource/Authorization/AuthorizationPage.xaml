<Page
	x:Class="OxygenVK.Authorization.AuthorizationPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
	xmlns:controls="using:Windows.UI.Xaml.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:OxygenVK.Authorization.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Loaded="Page_Loaded"
	RequestedTheme="Default"
	mc:Ignorable="d">
	<Page.Resources>
		<ResourceDictionary Source="/AppSource/Dictionaries/ApplicationThemeDictionary.xaml" />
	</Page.Resources>
	<Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}">
		<Grid>
			<Grid
				Margin="0,35,0,0"
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition Height="auto" />
				</Grid.RowDefinitions>
				<Border
					x:Name="borderHintRecentlyLoggedIn"
					MinWidth="270"
					Padding="10"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					BorderBrush="{ThemeResource SystemControlAccentAcrylicWindowAccentMediumHighBrush}"
					BorderThickness="2"
					CornerRadius="20">
					<GridView
						x:Name="listUsersCard_GridView"
						Grid.Row="0"
						MinWidth="444"
						Padding="0,0,-6,-6"
						HorizontalAlignment="Center"
						animations:ReorderGridAnimation.Duration="200"
						CornerRadius="10"
						SelectionMode="None"
						SizeChanged="listUsersCard_GridView_SizeChanged">
						<GridView.Header>
							<StackPanel x:Name="hintRecentlyLoggedIn" Padding="10,0,10,10">
								<TextBlock Style="{StaticResource SubtitleTextBlockStyle}" TextWrapping="WrapWholeWords">
									<Bold>
										Недавно входили на сайт с этого приложения
									</Bold>
								</TextBlock>
								<TextBlock
									FontSize="15"
									Foreground="Gray"
									TextWrapping="WrapWholeWords">
									Чтобы войти снова, нажмите на фотографию или имя.
								</TextBlock>
							</StackPanel>
						</GridView.Header>
						<GridView.ItemTemplate>
							<DataTemplate>
								<local:UserCard ClickDelete="UserCard_ClickDelete" />
							</DataTemplate>
						</GridView.ItemTemplate>
						<controls:GridView.ItemContainerStyle>
							<Style TargetType="controls:GridViewItem">
								<Setter Property="Template">
									<Setter.Value>
										<ControlTemplate TargetType="GridViewItem">
											<GridViewItemPresenter PointerOverBackgroundMargin="0" />
										</ControlTemplate>
									</Setter.Value>
								</Setter>
							</Style>
						</controls:GridView.ItemContainerStyle>
					</GridView>
				</Border>
				<Button
					Name="cardAdd"
					Grid.Row="1"
					Margin="0,10,0,0"
					HorizontalAlignment="Center"
					Click="cardAdd_Click"
					Content="Войти в другой аккаунт"
					FontSize="16" />
			</Grid>
		</Grid>
		<local:WebAuthControl
			x:Name="webAuthControl"
			Closing="webAuthControl_Closing"
			Opacity="0"
			Visibility="Collapsed" />
	</Grid>
</Page>
